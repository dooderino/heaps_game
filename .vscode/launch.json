{
	// Utilisez IntelliSense pour en savoir plus sur les attributs possibles.
	// Pointez pour afficher la description des attributs existants.
	// Pour plus d'informations, visitez : https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "chrome",
			"request": "launch",
			"name": "Chrome WebGL",
			"url": "file://${workspaceFolder}/bin/js/index.html",
			"webRoot": "${workspaceFolder}/bin/js",
			"preLaunchTask": "HeapsJS"
		},
		{
			"name": "HashLink",
			"request": "launch",
			"type": "hl",
			"hxml": "hl.hxml",
			"cwd": "${workspaceRoot}",
			"preLaunchTask": "HeapsHL"
		},
		{
            "name": "Flash",
            "type": "fdb",
            "request": "launch",
			"program": "${workspaceRoot}/bin/swf/game.swf",
			"preLaunchTask": "HeapsSWF"
        }
	]
}
